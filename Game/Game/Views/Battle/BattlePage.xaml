                <!-- buttons-->                
                <Button Grid.Row="2" x:Name="StartBattleButton" Clicked="StartButton_Clicked" Text="Start Battle" IsVisible="True"/>
                

                <!-- battle player box-->
                <Frame Grid.Row="3" x:Name="BattlePlayerInfomationBox" BackgroundColor="DarkRed"
                                IsVisible="False" HorizontalOptions="CenterAndExpand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="Beige" Padding="0">
                            <StackLayout x:Name="AttackerBox" HorizontalOptions="Start">
                                <Image x:Name="AttackerImage" Source="https://cn.i.cdn.ti-platform.com/cnapac/content/438/showpage/teen-titans-go%21/sa/showicon.png" 
                                   HeightRequest="70"
                                       Aspect="AspectFill"
                                       VerticalOptions="CenterAndExpand"/>
                                
                            </StackLayout>
                        </Frame>

                        <Frame Grid.Row="0" 
                               Grid.Column="1" 
                               BackgroundColor="Beige" 
                               Padding="0">
                            <StackLayout Orientation="Vertical"
                                         HorizontalOptions="Center"
                                         Padding="0" >
                                <ImageButton Source="attack.png" 
                                             HeightRequest="70"
                                             Aspect="AspectFill"
                                             VerticalOptions="CenterAndExpand" 
                                             HorizontalOptions="CenterAndExpand" 
                                             BorderColor="DarkRed" 
                                             Clicked="AttackButton_Clicked"/>
                                <Label Text="Attack" 
                                       TextColor="Black" 
                                       FontSize="Small" 
                                       HorizontalOptions="Center"/>
                            </StackLayout>
                        </Frame>


                        <Frame Grid.Row="0" 
                               Grid.Column="2" 
                               BackgroundColor="Beige" 
                               Padding="0">
                            <StackLayout Orientation="Vertical"
                                         HorizontalOptions="Center"
                                         Padding="0" >
                                <ImageButton Source="move.png" 
                                             HeightRequest="70"
                                             Aspect="AspectFill"
                                             VerticalOptions="CenterAndExpand" 
                                             HorizontalOptions="CenterAndExpand" 
                                             BorderColor="DarkRed" 
                                             Clicked="AttackButton_Clicked"/>
                                <Label Text="Move" 
                                       TextColor="Black" 
                                       FontSize="Small" 
                                       HorizontalOptions="Center"/>
                            </StackLayout>
                        </Frame>

                        <Frame Grid.Row="0" 
                               Grid.Column="3" 
                               BackgroundColor="Beige" 
                               Padding="0">
                            <StackLayout Orientation="Vertical"
                                         HorizontalOptions="Center"
                                         Padding="0" >
                                <ImageButton Source="skills.png" 
                                             HeightRequest="70"
                                             Aspect="AspectFill"
                                             VerticalOptions="CenterAndExpand" 
                                             HorizontalOptions="CenterAndExpand" 
                                             BorderColor="DarkRed" 
                                             Clicked="AttackButton_Clicked"/>
                                <Label Text="Skills" 
                                       TextColor="Black" 
                                       FontSize="Small" 
                                       HorizontalOptions="Center"/>
                            </StackLayout>
                        </Frame>

                    </Grid>
                    
                </Frame>

                <!--message box -->
                <StackLayout Grid.Row="5" x:Name="MessageDisplayBox" 
                            IsVisible="false"
                            Style="{StaticResource VerticalStack}" 
                                    VerticalOptions="StartAndExpand"
                                    HorizontalOptions="CenterAndExpand">

                    <Label x:Name="BattleMessages2" 
                                    HorizontalOptions="FillAndExpand" 
                                    LineBreakMode="WordWrap" 
                                    MaxLines="3"
                                    LineHeight="1"
                                    CharacterSpacing="1"
                                    Style="{StaticResource LabelStyle}"
                                    FontSize="Large"
                                    TextColor="Black"/>
                </StackLayout>
               
            </Grid>

