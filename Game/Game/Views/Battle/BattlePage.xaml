<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BattlePage">

    <ContentPage.Content>
        
        <!-- should be absolute layout during finish-->
        <ScrollView>
            <Grid>

                <Grid.RowDefinitions>
                    <!--Round message box grid-->
                    <RowDefinition Height="auto" />
                    <!--Battlefield Grid-->
                    <RowDefinition Height="auto" />
                    <!--character action boxes grid-->
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--Round message box-->
                <Label Text="Round 1" 
                       Grid.Row="0" 
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center" 
                       TextColor="White"
                       FontSize="Default"/>
                
                
                <Image Grid.Row="1" Source="https://mithun.com/wp-content/uploads/2020/02/0820400_N25.jpg"/>

                
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height = "*"/>
                        <RowDefinition Height = "*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Source="battle_start_button.png" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                    <Image Grid.Column="1" Grid.Row="0" Source="demo_char.png" />
                    <Image Grid.Column="2" Grid.Row="0" Source="demo_char.png" />
                    <Image Grid.Column="3" Grid.Row="0" Source="demo_char.png" />
                    <Image Grid.Column="1" Grid.Row="1" Source="demo_char.png" />
                    <Image Grid.Column="2" Grid.Row="1" Source="demo_char.png" />
                    <Image Grid.Column="3" Grid.Row="1" Source="demo_char.png" />

                </Grid>





            </Grid>
        </ScrollView>
      
        
    </ContentPage.Content>
</ContentPage>