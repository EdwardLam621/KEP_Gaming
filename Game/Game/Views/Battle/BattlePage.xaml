<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.BattlePage">

    <ContentPage.Content>
        
        <!-- should be absolute layout during finish-->
        <ScrollView>
            <Grid>

                <Grid.RowDefinitions>
                    <!--Round message box grid-->
                    <RowDefinition Height="*" />
                    <!--Battlefield Grid-->
                    <RowDefinition Height="6*" />
                    <!--character action boxes grid-->
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>

                <!--Round message box-->
                <Label Text="Round 1" 
                       Grid.Row="0" 
                       HorizontalTextAlignment="Center" 
                       VerticalTextAlignment="Center" 
                       TextColor="White"
                       FontSize="Default"/>
                
                
                <Image Grid.Row="1" Source="https://mithun.com/wp-content/uploads/2020/02/0820400_N25.jpg"/>








            </Grid>
        </ScrollView>
      
        
    </ContentPage.Content>
</ContentPage>