                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Battlefield Background-->
                    <Image
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.ColumnSpan="6"
                        Grid.RowSpan="6"
                        Source="https://clipartart.com/images/battlefield-clipart-1.jpg" Aspect="AspectFill"/>

                    <!--Round message box-->
                    <Label Text="Round " 
                       Grid.Row="0" 
                           Grid.Column="0"
                           Grid.ColumnSpan="6"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       TextColor="Black"
                       FontSize="24"/>
                    
